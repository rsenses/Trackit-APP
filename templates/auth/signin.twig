{% extends 'layouts/public.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12 login">
            {% include 'partials/flash.twig' %}
            <form action="{{ path_for('auth.signin') }}" method="POST" class="login">
                <div class="form-group{{ validation_errors.email ? ' has-error' : '' }}">
                    <label for="email">Usuario</label>
                    <input type="email" name="email" class="form-control" id="email" placeholder="Email" value="{{ old_input.email }}">
                    {% if validation_errors.email %}
                        <span class="help-block">
                            {{ validation_errors.email | first }}
                        </span>
                    {% endif %}
                </div>
                <div class="form-group{{ validation_errors.password ? ' has-error' : '' }}">
                    <label for="password">Contrase√±a</label>
                    <input type="password" name="password" class="form-control" id="password" placeholder="Password">
                    {% if validation_errors.password %}
                        <span class="help-block">
                            {{ validation_errors.password | first }}
                        </span>
                    {% endif %}
                </div>
                <div class="form-group text-center">
                    <button type="submit"class="btn btn-link btn-block btn-lg" ><i class="fa fa-check-circle-o fa-4x" aria-hidden="true"></i></button>
                    {{ csrf.field | raw }}
                </div>
            </form>
        </div>
    </div>
{% endblock %}
