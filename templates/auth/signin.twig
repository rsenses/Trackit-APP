{% extends 'layouts/public.twig' %}

{% block head %}
    <div class="logo-login center-align">
        <img src="/images/logo_trackit.png" alt="Trackit" class="responsive-img">
    </div>
{% endblock %}

{% block content %}
<main class="login container">
    <div class="row">
        <div class="col s12">
            <h5 class="center-align white-text">Iniciar sesión</h5>
        </div>
        <form action="{{ path_for('auth.signin') }}" method="POST" class="login col s12">
            <div class="row">
                <div class="col s12">
                    {% include 'partials/flash.twig' %}
                </div>
                <div class="input-field col s12 {{ validation_errors.email ? ' has-error' : '' }}">
                    <input  name="email" id="email" type="email" class="white validate" value="{{ old_input.email }}">
                    <label for="email">Email</label>
                    {% if validation_errors.email %}
                        <span class="helper-text red white-text" data-error="wrong">
                            {{ validation_errors.email | first }}
                        </span>
                    {% endif %}
                </div>
                <div class="input-field col s12 {{ validation_errors.password ? ' has-error' : '' }}">
                    <input type="password" name="password" id="password"  class="white validate">
                    <label for="password">Contraseña</label>
                    {% if validation_errors.password %}
                        <span class="helper-text red white-text" data-error="wrong">
                            {{ validation_errors.password | first }}
                        </span>
                    {% endif %}
                </div>
                <div class="col s12 right-align">
                    <button class="waves-effect waves-dark btn-large green text-white" type="submit" name="action">Entrar
                        <i class="mdi mdi-login right"></i>
                        {{ csrf.field | raw }}
                    </button>
                </div>
            </div>
        </form>
    </div>
</main>
{% endblock %}
{% block footer %}
<footer>
    <div class="container">
        <div class="row">
            <div class="center-align">
                © Metech 2018
            </div>
        </div>
    </div>
</footer>
{% endblock %}
{% block scripts %}
{% endblock %}