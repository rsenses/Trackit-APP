{% extends 'layouts/private.twig' %}

{% block menu %}

{% endblock %}

{% block content %}
    <main>
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <h4 class="white-text  center-align">Seleciona el evento</h4>
                </div>
                <div class="col s12 center-align">
                    <div class="row">
                    {% for product in products %}
                        <div class="col s12 m6">
                            <div class="card">
                                <div class="card-image waves-effect waves-block waves-light">
                                    <img class="activator" src="{{ (product.image) ? product.image : '/images/no-image.png' }}" alt="{{ product.name }}">
                                </div>
                                <div class="card-content">
                                    <span class="card-title activator grey-text text-darken-4">{{ product.name }}</span>
                                    <p><a class="btnSelectLaser hide  waves-effect waves-light btn" href="{{ path_for('product.laserscan', {'id': product.product_id}) }}">ENTRAR</a></p>
                                    <p><a class="btnSelectSearch  waves-effect waves-light btn" href="{{ path_for('product.search', {'id': product.product_id}) }}">ENTRAR</a></p>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}