{% if flash.getMessage('info') %}
<div class="card blue-grey darken-1">
    <a href="#0" class="right closer transparent white-text "><i class="material-icons right">close</i></a>
    <div class="row">
        <div class="col s12 m10">
        <div class="card-content white-text">
            <p><i class="material-icons">notification_important</i> {{ flash.getMessage('info') | first | raw }}</p>
        </div>
    </div>
</div>
{% endif %}

{% if flash.getMessage('warning') %}
<div class="card amber darken-2">
    <a href="#0" class="right closer transparent white-text "><i class="material-icons right">close</i></a>
    <div class="row">
        <div class="col s12 m10">
        <div class="card-content white-text">
            <p><i class="material-icons">error_outline</i> {{ flash.getMessage('warning') | first | raw }}</p>
        </div>
    </div>
</div>
{% endif %}

{% if flash.getMessage('danger') %}
<div class="card red darken-1">
    <a href="#0" class="right closer transparent white-text "><i class="material-icons right">close</i></a>
    <div class="row">
        <div class="col s12 m10">
        <div class="card-content white-text">
            <p><i class="material-icons">warning</i>{{ flash.getMessage('danger') | first | raw }}</p>
        </div>
    </div>
</div>
{% endif %}

